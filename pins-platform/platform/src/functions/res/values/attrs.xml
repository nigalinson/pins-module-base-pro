<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RippleView">
        <attr name="rippleColor" format="color"/>
        <attr name="alphaFactor" format="float"/>
        <attr name="hover" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RyPlayer">
        <attr name="player_auto_init" format="boolean"/>
        <attr name="player_auto_scale_view_port" format="boolean"/>
        <attr name="player_surface_type" format="integer">
            <enum name="surface_view" value="1" />
            <enum name="texture_view" value="2" />
        </attr>
        <attr name="player_scale_type" format="integer">
            <enum name="fit_xy" value="1"/>
            <enum name="fit_center" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundedTextView">
        <attr name="rtv_corner_radius" format="dimension" />
        <attr name="rtv_corner_radius_top_left" format="dimension" />
        <attr name="rtv_corner_radius_top_right" format="dimension" />
        <attr name="rtv_corner_radius_bottom_left" format="dimension" />
        <attr name="rtv_corner_radius_bottom_right" format="dimension" />
        <attr name="rtv_border_width" format="dimension" />
        <attr name="rtv_border_color" format="color" />
        <attr name="rtv_mutate_background" format="boolean" />
        <attr name="rtv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="rtv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="rtv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="rtv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

</resources>